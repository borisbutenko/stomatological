extends ../base
block vars
  - var title = 'Фотогалерея по стоматологии'
block main
  +breadcrumbs([
      {
          name: 'Главная',
          url: 'index.html'
      },
      {
          name: 'Фотогалерея по стоматологии',
          url: null
      }])
  .container
    .row
      .col-md-9.col-sm-8.col-xs-12
        section.section.section__gallery
          .clearfix
            .col-md-8.col-sm-6.col-xs-12
              h2.h2.section__title.pull-left Фотогалерея по стоматологии
            .col-md-4.col-sm-6.col-xs-12
              a.btn.btn-primary.section__group__link.pull-right
                i.fa.fa-plus
                | Добавить фото
          ul.thumbnails.clearfix
            - var n = 0
            while n < 12
              li.span4
                .col-md-4.col-sm-6.col-xs-6
                  .thumbnail
                    a(href='#0')
                      img(src='assets/img/gallery-1.jpg' alt='')
                    h2.h2
                      a(href='#0') Разное в стоматологии
                    .photo-count
                      i.fa.fa-picture-o
                      | 113
              - n++
      .col-md-3.col-sm-4.col-xs-12
        include ../__blocks/group__aside
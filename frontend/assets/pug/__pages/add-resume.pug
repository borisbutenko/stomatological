extends ../base
block vars
  - var title = 'Создание резюме'
block main
  +breadcrumbs([
      {
          name: 'Главная',
          url: 'index.html'
      },
      {
          name: 'Создание резюме',
          url: null
      }])
  .container
    .row
      .col-md-9.col-sm-8.col-xs-12
        section.section.section__add-resume.section__add-vacancy
          .col-md-12.col-sm-12.col-xs-12
            h2.h2.section__title Создание резюме
            .main-widget.main-widget__user
              form.form.form__user
                .form__group.clearfix
                  label.label.form__user__label Рубрика
                  select.select.input
                    option(selected) - Выбор -
                      - var n = 1
                      while n < 10
                        - var month = 'Рубрика-' + n++
                        option= month
                .form__group.clearfix
                  label.label.form__user__label Город
                  select.select.input
                    option(selected) - Выбор -
                      - var n = 1
                      while n < 10
                        - var month = 'Город-' + n++
                        option= month
                .form__group.clearfix
                  label.label.form__user__label График работы
                  select.select.input
                    option(selected) - Выбор -
                      - var n = 1
                      while n < 10
                        - var month = 'График-' + n++
                        option= month
                .form__group.clearfix
                  label.label.form__user__label Тип занятости
                  select.select.input
                    option(selected) - Выбор -
                      - var n = 1
                      while n < 10
                        - var month = 'Тип занятости-' + n++
                        option= month
                .form__group.clearfix
                  label.label.form__user__label Зарплата от
                  input.input(type='text' name='name' placeholder='руб.')
                .form__group.clearfix
                  label.label.form__user__label Договорная
                  input.input-checkbox(type='checkbox' name='name')
                .form__group.clearfix
                  label.label.form__user__label(for='sex') Пол
                  .form__user__radio
                    span#sex
                      input#radio-man.input-checkbox(type='radio' name='radio-group' value='1')
                      label.label(for='radio-man') Мужской
                      input#radio-woman.input-checkbox(type='radio' name='radio-group' value='2')
                      label.label(for='radio-woman') Женский
                .form__group.clearfix
                  label.label.form__user__label Возраст
                  input.input(type='text' name='name' placeholder='лет')
                .form__group.clearfix
                  label.label.form__user__label Тип занятости
                  select.select.input
                    option(selected) - Выбор -
                      - var n = 1
                      while n < 10
                        - var month = 'Стаж-' + n++
                        option= month
                .form__group.clearfix
                  label.label.form__user__label.form__user__label-textarea Навыки и опыт
                  textarea.input.textarea
                .form__group.clearfix
                  label.label.form__user__label Образование
                  select.select.input
                    option(selected) - Выбор -
                      - var n = 1
                      while n < 10
                        - var month = 'Образование-' + n++
                        option= month
                .form__group.clearfix
                  label.label.form__user__label Учебное заведение
                  input.input(type='text' name='name')
                .form__group.clearfix
                  label.label.form__user__label Специальность
                  input.input(type='text' name='name')
                .form__group.clearfix
                  label.label.form__user__label.form__user__label-textarea Доп. образование
                  textarea.input.textarea
                .form__group.clearfix
                  label.label.form__user__label.form__user__label-textarea Личные качества
                  textarea.input.textarea
                .form__group.clearfix
                  label.label.form__user__label Имя
                  input.input(type='text' name='name')
                .form__group.clearfix
                  label.label.form__user__label Фамилия
                  input.input(type='text' name='name')
                .form__group.clearfix
                  label.label.form__user__label Отчество
                  input.input(type='text' name='name')
                hr
                .form__group.clearfix
                  button.btn.btn-primary(type='submit') Создать
      .col-md-3.col-sm-4.col-xs-12
        include ../__blocks/rubric__aside
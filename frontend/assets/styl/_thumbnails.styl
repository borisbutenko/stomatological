.thumbnails
  &__item
    width: 32.5%
    float: left
    background: #fff
    padding: 1rem
    border: .1rem solid #eee
    box-shadow: 0 .1rem 2px rgba(0,0,0,0.1)
    margin-bottom: 1rem
    margin-right: 1rem
    &:last-child
      margin-right: 0
  &__container
    background: #fff
    padding: 1rem
    display: block
    line-height: 2rem
    box-shadow: 0 .1rem .2rem rgba(0,0,0,0.2)
  &__title
    font-size: 1.4rem
    line-height: 2rem
    padding: 1rem 0
  &__comment
    & i
      margin-right: .5rem
.vacancy
  &__row
    margin-bottom: 1rem
  & h2.main-widget__title
    padding: 0
  & i
    margin-right: .5rem
  &__title
    font-size: 1.8rem
  &__salary
    font-size: 1.6rem
    color: #04b8ca
    font-weight: 600
    & i
      margin: 0 .5rem
  &__company
    font-weight: bold
    margin: 0

.aside__job
  & .sidebar-widget
    & .sidebar__item
      padding: 0
      margin: 0
      border: none
    & .sidebar__link
      display: block
      padding: .5rem 0
      &:hover
        text-decoration: none
        background-color: #eee
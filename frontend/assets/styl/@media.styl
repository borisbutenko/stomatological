@media (max-width: 1200px)
  .thumbnails > .thumbnails__item
    width: 32.25%

@media (max-width: 992px)
  .form__user
    & #birthday
      display: block
    & label[for=work-period-from],
    & label[for=work-period-to]
      display: block !important

  .menu-main__item-divider-vertical
    display: none !important

  .thumbnails > .thumbnails__item
    width: 48.5%
    &:last-child
      margin-right: 0
    &:nth-child(n+2)
      margin-right: 0

  .header__title
    display: none

  .social
    display: none

  .ads-result__date
    &.pull-right
      float: left !important
    top: .5rem !important
    clear: none !important

@media (max-width: 768px)
  .form__user
    & select.select
      float: left
      margin-right: .5rem
      margin-bottom: .5rem
    & span.btn-file
      float: left
      margin-left: 0
    &__radio
      width: 100%
      & #sex > .input-checkbox
        float: left !important
        top: 0 !important
        & + label.label
          float: left
          width: auto
          margin-left: 1rem
    & .form__user__label-textarea
      top: 0
      & + textarea.textarea
        width: 100%

  #menu-main [data-toggle=dropdown]
    & + .dropdown-menu
      opacity: 1 !important
      transition: all .5s !important
    &:hover + .dropdown-menu
      display: none !important
      opacity: 1 !important

  #menu-main
    & .dropdown-menu:hover
      display: block
      opacity: 1
    & .dropdown.open > ul.dropdown-menu
      display: block !important

  .menu-sub
    &__item
      display: inline-block !important
      border-right: .1rem solid #37c6d6
      &:last-child
        border-right: none

  .menu-sub__item-divider-vertical
    display: none !important

  .section__footer
    display: none

  .copyright
    text-align: center !important
    margin: -2rem 0

  .form
    &__group
      text-align: center
      & label.label
        width: 100%
        text-align: left
        padding-left: 0
        &-checkbox
          text-align: center
      & input.input
        width: 100%
        &-checkbox
          float: unset !important
          top: .2rem !important
    & button.btn
      width: 100%

  .section__group__link
    top: 0 !important
    margin-bottom: 2rem !important

@media (max-width: 500px)
  .logo__name
    font-size: 1.3rem !important

  .section__user .main-widget
    padding: 2rem

  .thumbnails > .thumbnails__item
    width: 100%
    margin-right: 0 !important
  .thumbnail__link
    width: 100%
    text-align: center
    display: block

  .actions
    text-align: right
    &__item
      margin-bottom: 1rem
      &:last-child
        margin-bottom: 0